                                                            <DatePicker fx:id="dateInput" layoutX="1.0" layoutY="133.0" onAction="#onChangeDateInput" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="140.0" />
