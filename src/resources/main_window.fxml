                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextArea>
                        <TabPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="360.0" prefWidth="480.0" tabClosingPolicy="UNAVAILABLE" HBox.hgrow="ALWAYS">
